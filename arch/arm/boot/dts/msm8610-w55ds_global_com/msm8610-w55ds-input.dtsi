&soc {
	i2c@f9923000{
		mms100s@48 {
			melfas,product = "I4S45A";
			melfas,max-x = <480>;
			melfas,max-y = <800>;
                        melfas,use_vdd_i2c = <1>;
			melfas,gpio-vdd-en = <62>;
			melfas,key-map = <158 172 139 249>;
			melfas,fw-image-name = "melfas/w55ds_global_com/w55ds_global_com_rev_b_v1.04.mfsb";
                        revision = "rev_a...rev_b";
			status = "ok";
		};
		mms100s@48_rev_c {
			melfas,product = "I4S45A";
			melfas,max-x = <480>;
			melfas,max-y = <800>;
                        melfas,use_vdd_i2c = <1>;
			melfas,gpio-vdd-en = <82>;
			melfas,key-map = <158 172 139 249>;
			melfas,fw-image-name = "melfas/w55ds_global_com/w55ds_global_com_rev_b_v1.04.mfsb";
                        revision = "rev_c";
			status = "ok";
		};
		synaptics_red@20 {
			status = "disable";
			revision = "rev_d...";
			synaptics,button-map = <158 172 139 249>;
			synaptics,i2c-pull-up = <0>;
			synaptics,power-down  = <1>;
			synaptics,gpio_vdd_en  = <82>;
		};
		
		synaptics_s220x@20 {
			status = "ok";
			revision = "rev_d...";
			synaptics,fw_version_info = <0x34 0x04 0x31>;
			synaptics,fw_image = "synaptics/w55ds_global_com/PLG333-V1.12-PR1597031-DS4.3.5.1.16_3404318C.img";
			synaptics,panel_spec = "synaptics/w55ds_global_com/w55ds_global_com_limit.txt";
			synaptics,global_access_pixel = <10>;
			lge,knock_on_type = <1>;

			synaptics,platform_data	{
				number_of_button = <4>;
				button_name = [9e ac 8b f9];
				x_max = <960>;
				y_max = <1600>;
				lcd_x = <480>;
				lcd_y = <800>;
				use_vio_regulator = <1>;
				gpio_vdd_en = <82>;
				/*maker_id  disable(0), enable(1)*/
				maker_id = <0>;
				maker_id_gpio = <76>;
				palm_detect_mode = <1>;
				ghost_detection_enable = <0>;
				ghost_detection_jitter_value = <8>;
			};				
		};
	};
	gpio_keys {
		quick_clip {
			label = "quick_clip";
			gpios = <&msmgpio 75 0x1>;
			linux,input-type = <1>;
			linux,code = <250>;
			gpio-key,wakeup;
			debounce-interval = <15>;
		};
	};
};
