
#EXTRA_CFLAGS += -DBMA2X2_SENSOR_IDENTIFICATION_ENABLE

EXTRA_CFLAGS += -DBMA2X2_ENABLE_INT1

ifeq ($(CONFIG_MACH_MSM8926_T8LTE), y)
	EXTRA_CFLAGS += -DNEW_ALGORITHM
	EXTRA_CFLAGS += -DUSE_COMMON_SYSFS
endif

EXTRA_CFLAGS += -DCONFIG_BMA_USE_PLATFORM_DATA

ifeq ($(CONFIG_SENSORS_BMA2X2), y)
	EXTRA_CFLAGS += -DBMA2X2_ACCEL_CALIBRATION
endif

ifeq ($(CONFIG_SENSOR_K2DH), y)
	EXTRA_CFLAGS += -DK3DH_ACCEL_CALIBRATION
endif

obj-$(CONFIG_SENSORS_BMA2X2) += bstclass.o
obj-$(CONFIG_SENSORS_BMA2X2) += bma2x2.o
obj-$(CONFIG_SENSORS_BMG) += bmg160_driver.o bmg160.o
obj-$(CONFIG_SENSORS_BMM050) += bmm050_driver.o bmm050.o
obj-$(CONFIG_SENSORS_K2DH)    += lis2dh_acc.o
obj-$(CONFIG_SENSOR_K2DH)       += k3dh_acc.o
obj-$(CONFIG_SENSOR_AK09911)    += akm09911.o
obj-$(CONFIG_SENSOR_K303C)   += lsm303c_acc.o
obj-$(CONFIG_SENSOR_APDS9130)   += apds9130.o
obj-$(CONFIG_SENSOR_K303C)   += lsm303c_mag.o
obj-$(CONFIG_SENSOR_APDS9190)   += apds9190.o
obj-$(CONFIG_SENSOR_SX9500)   += sx86xx.o sx9500.o
obj-$(CONFIG_SENSOR_SX9311)   += sx86xx.o sx9311.o
obj-$(CONFIG_SENSOR_ATMF04)   += atmf04.o
